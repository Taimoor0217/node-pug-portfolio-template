extends layout.pug
block variables
  - var Name = name
  - var Description = short_description
block content 
  article.grid-container.portfolio-intro
    div
      //- Rather than hardcoding the personal information here, I have also added that to data.json this make the application more flexible
      //- as I only need to change some varibale in the data.json file
      h1 #{header_message}

      p.lead.text-light
        | #{long_description}

  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each proj, index in projects
        .cell
            a(href=`/projects/${proj.id}`)
                img.thumbnail(src=`/images/${proj.image_urls[0]}`)
            h5 #{proj.project_name}
      
